{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "make",
            "args": [
//                "TARGET=tests",
		        "debug"
            ],
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build Debug [all]",
            "type": "shell",
            "command": "make",
            "args": [
		        "debug"
            ],
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "make",
            "args": [
                "-j10",
	        "all",
                "NODEJS_ENABLED=0"
            ],
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
